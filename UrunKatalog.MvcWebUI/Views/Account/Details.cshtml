@model UrunKatalog.MvcWebUI.Models.OrderDetailsModel
@{
    ViewBag.Title = "Details";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Sipariş Bİlgileri</h2>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">Order State</dt>
                <dd class="col-sm-9">
                
                    @if(Model.OrderState==UrunKatalog.MvcWebUI.Entity.EnumOrderState.Waiting)
                    {
                        <span class="badge-danger">Onay Bekleniyor</span>
                    }
                    else if(Model.OrderState == UrunKatalog.MvcWebUI.Entity.EnumOrderState.Completed)
                    {
                        <span class="badge-success">Sipariş Tamamlandı.</span>
                    }
                </dd>

                <dt class="col-sm-3">Order Id</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>

                <dt class="col-sm-3">Order Number</dt>
                <dd class="col-sm-9">@Model.OrderNumber</dd>

                <dt class="col-sm-3">Total</dt>
                <dd class="col-sm-9">
                    <i class="fa fa-try" aria-hidden="true"></i>
                    @Model.Total
                </dd>

                <dt class="col-sm-3">Order Date</dt>
                <dd class="col-sm-9">@Model.OrderDate</dd>

                <dt class="col-sm-3">Order Id</dt>
                <dd class="col-sm-9">@Model.OrderId</dd>



                <dt class="col-sm-3">Adres</dt>
                <dd class="col-sm-9">
                    @Model.AdresBasligi
                    <hr />
                    @Model.Adres
                    <br />
                    @Model.Sehir - @Model.Semt - @Model.Mahalle
                    <br />
                    @Model.PostaKodu
                </dd>

                <dt class="col-sm-3">Products</dt>
                <dd class="col-sm-9">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Image</th>
                                <th style="width:45%;">Product Name</th>
                                <th>Quantity</th>
                                <th>Price</th>
                                <th style="width:10%;"></th>
                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var item in Model.OrderLines)
                            {
                                <tr>
                                    <th>
                                        <img src="~/Upload/@item.Image" width="70px" />
                                    </th>
                                    <th>
                                        @item.ProductName
                                    </th>
                                    <th>
                                        @item.Quantity
                                    </th>
                                    <th>
                                        <i class="fa fa-try" aria-hidden="true"></i>
                                        @item.Price
                                    </th>
                                    <th>
                                        <a href="/Home/Details/@item.ProductId" class="btn btn-primary btn-sm" target="_blank">
                                        <i class="fa fa-angle-double-right" aria-hidden="true"></i>                                        
                                        Product Details</a>
                                    </th>
                                </tr>
                            }

                        </tbody>
                    </table>

                </dd>

            </dl>
        </div>
    </div>
</div>

