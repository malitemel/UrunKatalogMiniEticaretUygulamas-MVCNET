@model IEnumerable<UrunKatalog.MvcWebUI.Models.AdminOrderModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container pb-5">
    <h2>Siparişler</h2>
    <hr />
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order Number</th>
                <th>Order Date</th>
                <th>Order Status</th>
                <th>Total</th>
                <th>Product Count</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <th>@item.OrderNumber</th>
                    <th>@item.OrderDate</th>
                    <th>@item.OrderState</th>
                    <th>@item.Count</th>
                    <th>@item.Total</th>
                    <th>
                        @Html.ActionLink("Details","Details",new { id = item.Id },new {@class="btn btn-primary btn-sm"})
                    </th>
                </tr>
            }
        </tbody>
    </table>
</div>

